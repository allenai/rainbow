#! /usr/bin/env bash

set -e


# Download the Rainbow datasets.

if [[ $# -ne 1 ]]; then
  echo "Usage: $0 OUTPUT_DIR"
  exit 1
fi

OUTPUT_DIR="$1"


mkdir --parents "$OUTPUT_DIR"


# aNLI

mkdir --parents "$OUTPUT_DIR/anli/"
wget \
    --output-document "$OUTPUT_DIR/anli/alphanli-train-dev.zip" \
    https://storage.googleapis.com/ai2-mosaic/public/alphanli/alphanli-train-dev.zip


# HellaSWAG

mkdir --parents "$OUTPUT_DIR/hellaswag/"
wget \
    --output-document "$OUTPUT_DIR/hellaswag/hellaswag-train-dev.zip" \
    https://storage.googleapis.com/ai2-mosaic/public/hellaswag/hellaswag-train-dev.zip


# PhysicalIQA

mkdir --parents "$OUTPUT_DIR/physicaliqa/"
wget \
    --output-document "$OUTPUT_DIR/physicaliqa/physicaliqa-train-dev.zip" \
    https://storage.googleapis.com/ai2-mosaic/public/physicaliqa/physicaliqa-train-dev.zip


# SocialIQA

mkdir --parents "$OUTPUT_DIR/socialiqa/"
wget \
    --output-document "$OUTPUT_DIR/socialiqa/socialiqa-train-dev.zip" \
    https://storage.googleapis.com/ai2-mosaic/public/socialiqa/socialiqa-train-dev.zip


# VCR

mkdir --parents "$OUTPUT_DIR/vcr/"
wget \
    --output-document "$OUTPUT_DIR/vcr/train.tar.gz" \
    https://storage.googleapis.com/ai2-mosaic/public/vcr/train.tar.gz
wget \
    --output-document "$OUTPUT_DIR/vcr/val.tar.gz" \
    https://storage.googleapis.com/ai2-mosaic/public/vcr/val.tar.gz


# CosmosQA

mkdir --parents "$OUTPUT_DIR/cosmosqa/"
wget \
    --output-document "$OUTPUT_DIR/cosmosqa/cosmosqa-data.zip" \
    https://storage.googleapis.com/ai2-mosaic/public/cosmosqa/cosmosqa-data.zip


# WinoGrande

mkdir --parents "$OUTPUT_DIR/winogrande/"
wget \
    --output-document "$OUTPUT_DIR/winogrande/winogrande_1.1.zip" \
    https://storage.googleapis.com/ai2-mosaic/public/winogrande/winogrande_1.1.zip
